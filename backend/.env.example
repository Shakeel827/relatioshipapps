# API Configuration
# Choose your AI provider - defaults to openai
# Options: "openai" or "custom"
AI_PROVIDER=openai

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
# DO NOT commit real keys. Provide via a real .env file or deployment secret manager.
OPENAI_API_KEY=your_openai_api_key_here
# Available models: gpt-4, gpt-4-mini, gpt-3.5-turbo, etc.
OPENAI_MODEL=gpt-4-mini

# ============================================================================
# CUSTOM API CONFIGURATION (for your own LLM API)
# ============================================================================
# Set AI_PROVIDER=custom to use these settings
CUSTOM_API_BASE_URL=https://your-api-endpoint.com
CUSTOM_API_KEY=your_custom_api_key_here
CUSTOM_MODEL=your-model-name

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=3000
NODE_ENV=development

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# AUTHENTICATION (JWT)
# ============================================================================
# Use a long, random string. Keep it secret.
JWT_SECRET=replace_with_a_long_random_secret
JWT_EXPIRES_IN=7d
